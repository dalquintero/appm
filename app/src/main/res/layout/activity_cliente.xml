<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B2EBF2"
    tools:context=".cliente">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="SERVICIOS VETERINARIOS CONOCE LA MEJOR ATENCION"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:onClick="onClick"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cirugias"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:onClick="onClick"
                        android:src="@drawable/cirugias" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="cirugias"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/estetica"
                        android:layout_width="223dp"
                        android:onClick="onClick"
                        android:layout_height="130dp"
                        android:src="@drawable/estetica" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Estetica"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/vacuna"
                        android:onClick="onClick"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:src="@drawable/vacuna" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Vacunas"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/madera1"
                        android:onClick="onClick"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:src="@drawable/profilaxis" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Profilaxis"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/esterilizacion"
                        android:onClick="onClick"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:src="@drawable/esterilizacion" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Esterilizacion"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tricilo1"
                        android:onClick="onClick"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:src="@drawable/desparacitacion" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="desparacitacion"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>



